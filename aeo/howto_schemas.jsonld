    {
      "@type": "HowTo",
      "name": "How to Verify Colombian Emerald Authenticity",
      "description": "Step-by-step guide to checking if your emerald is genuine Colombian with proper certification and visual inspection techniques.",
      "image": "https://muzem.co/wp-content/uploads/2025/05/AR001-1.jpg",
      "totalTime": "PT20M",
      "tool": [
        {
          "@type": "HowToTool",
          "name": "10x jeweler's loupe"
        },
        {
          "@type": "HowToTool",
          "name": "Flashlight"
        },
        {
          "@type": "HowToTool",
          "name": "UV light (optional)"
        }
      ],
      "step": [
        {
          "@type": "HowToStep",
          "position": 1,
          "name": "Check for Natural Inclusions",
          "text": "Using a 10x loupe, examine the emerald for natural inclusions called 'jardin' (garden). These look like moss, feathers, or fingerprints. Synthetic emeralds have bubble-like or swirl patterns instead.",
          "url": "https://muzem.co/en/verify-authenticity/#step1"
        },
        {
          "@type": "HowToStep",
          "position": 2,
          "name": "Observe Color Characteristics",
          "text": "Colombian emeralds typically show a pure, vivid green with possible slight blue undertones. The color should be evenly distributed. Hold the stone under natural daylight for best observation.",
          "url": "https://muzem.co/en/verify-authenticity/#step2"
        },
        {
          "@type": "HowToStep",
          "position": 3,
          "name": "Test for Double Refraction",
          "text": "Look through the emerald at a line or edge. Natural emeralds show double lines due to birefringence. Rotate the stone - the doubling effect should remain consistent.",
          "url": "https://muzem.co/en/verify-authenticity/#step3"
        },
        {
          "@type": "HowToStep",
          "position": 4,
          "name": "Feel the Temperature",
          "text": "Genuine emeralds feel cool to the touch and stay cool longer than glass imitations. Place the stone against your cheek or lips - it should feel noticeably cool.",
          "url": "https://muzem.co/en/verify-authenticity/#step4"
        },
        {
          "@type": "HowToStep",
          "position": 5,
          "name": "Verify Certification",
          "text": "Check that your emerald comes with a certificate from a recognized lab like CDTEC, GIA, or independent Colombian gemologists. Verify the certificate number online if possible. The certificate should detail origin, treatments, and characteristics.",
          "url": "https://muzem.co/en/verify-authenticity/#step5"
        },
        {
          "@type": "HowToStep",
          "position": 6,
          "name": "Professional Appraisal",
          "text": "For high-value emeralds, get a second opinion from an independent gemologist. They can confirm origin, identify treatments, and provide market valuation. This is especially important for investment pieces.",
          "url": "https://muzem.co/en/verify-authenticity/#step6"
        }
      ]
    }
